# OpenAI API Key (for GPT-4 Vision and text models)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini 2.5 API Key
GEMINI_API_KEY=AIzaSyCtCBbm9TePgnMYJW0byx_gQ7QMBFDyOvI

# Hugging Face API Token (optional)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Model Configuration
# -----------------------------------------------------------------------------
# Default models to use
DEFAULT_VISION_MODEL=gpt-4-vision-preview
DEFAULT_TEXT_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002

# Gemini model configuration
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_VISION_MODEL=gemini-2.0-flash-exp

# Application Settings
# -----------------------------------------------------------------------------
# Environment mode
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Content processing limits
MAX_CONTENT_LENGTH=10485760  # 10MB
MAX_VIDEO_DURATION=300       # 5 minutes
VIDEO_FRAME_SAMPLE_RATE=1    # 1 frame per second
MAX_NARRATIVE_LENGTH=5000    # characters

# Storage Configuration
# -----------------------------------------------------------------------------
# Local storage paths
CONTENT_STORAGE_PATH=./data/content
OUTPUT_STORAGE_PATH=./data/output
CACHE_STORAGE_PATH=./data/cache
LOGS_STORAGE_PATH=./data/logs

# API Configuration
# -----------------------------------------------------------------------------
# Web server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Database Configuration (if needed)
# -----------------------------------------------------------------------------
# DATABASE_URL=sqlite:///./data/multimodal_agent.db
# REDIS_URL=redis://localhost:6379/0

# External Services (optional)
# -----------------------------------------------------------------------------
# WEBHOOK_URL=https://your-webhook-url.com/callback
# NOTIFICATION_EMAIL=amp10162@nyu.edu

# Security Settings
# -----------------------------------------------------------------------------
# Secret key for session management
SECRET_KEY=your-secret-key-here

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "https://panuj.com"]

# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable features
ENABLE_VIDEO_PROCESSING=True
ENABLE_NARRATIVE_GENERATION=True
ENABLE_MARKETING_CONTENT=True
ENABLE_GEMINI_INTEGRATION=True
ENABLE_BATCH_PROCESSING=True
ENABLE_CACHING=True

# Advanced Configuration
# -----------------------------------------------------------------------------
# Concurrency settings
MAX_CONCURRENT_REQUESTS=10
MAX_CONCURRENT_VIDEO_PROCESSING=3
MAX_CONCURRENT_CONTENT_GENERATION=5

# Timeout settings (in seconds)
API_TIMEOUT=300
VIDEO_PROCESSING_TIMEOUT=600
CONTENT_GENERATION_TIMEOUT=120 